<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN" "http://struts.apache.org/dtds/struts-config_1_3.dtd">

<struts-config>
  <form-beans >
    <form-bean name="applyFieldForm" type="com.dreamflyer.struts.form.field.ApplyFieldForm" />
    <form-bean name="deleteFieldForm" type="com.dreamflyer.struts.form.field.DeleteFieldForm"></form-bean>
    <form-bean name="updateFieldForm" type="com.dreamflyer.struts.form.field.UpdateFieldForm" />
    <form-bean name="loginForm" type="com.dreamflyer.struts.form.users.LoginForm" />
    <form-bean name="helloForm" type="com.dreamflyer.struts.form.HelloForm" />
  </form-beans>  


  <global-exceptions />
  <global-forwards >
     <forward name="error" path="/fieldsystem/error.jsp" />
    <forward name="login_success" path="/webpages/login_success.jsp" />
    <forward name="login_fail" path="/webpages/login_fail.jsp" />

  </global-forwards>

  <action-mappings >
    <action
      attribute="applyFieldForm"
      input="/fieldsystem/applyField.jsp"
      name="applyFieldForm"
      path="/applyField"
      scope="request"
      type="com.dreamflyer.struts.action.field.ApplyFieldAction" >      
      <forward name="apply_succ" path="/fieldsystem/apply_succ.jsp" />
    </action>
    <action 
      attribute="deleteFieldForm"
      input="/fieldsystem/deleteField.jsp"
      name="deleteFieldForm"
      path="/deleteField"
      scope="request"
      type="com.dreamflyer.struts.action.field.ApplyFieldAction">      
      <forward name="delete_succ" path="/fieldsystem/delete_succ.jsp" />
      </action>
    <action
      attribute="updateFieldForm"
      input="/fieldsystem/updateField.jsp"
      name="updateFieldForm"
      path="/updateField"
      scope="request"
      type="com.dreamflyer.struts.action.field.ApplyFieldAction">
      <forward name="update_succ" path="/fieldsystem/update_succ.jsp" />
    </action>
    <action path="/apply" type="com.dreamflyer.struts.action.field.ApplyAction" >
      <forward name="applyF" path="/fieldsystem/applyField.jsp" />
      <forward name="deleteF" path="/fieldsystem/deleteField.jsp" />
      <forward name="updateF" path="/fieldsystem/updateField.jsp" />
    </action>
    <action
      attribute="loginForm"
      input="/webpages/login.jsp"
      name="loginForm"
      path="/login"
      scope="request"
      type="com.dreamflyer.struts.action.users.LoginAction" />
    



  </action-mappings>

  <message-resources parameter="com.dreamflyer.struts.ApplicationResources" />
</struts-config>

