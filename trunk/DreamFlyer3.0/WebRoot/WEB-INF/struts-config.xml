<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN" "http://struts.apache.org/dtds/struts-config_1_3.dtd">

<struts-config>
  <form-beans >
    <form-bean name="huntJobForm" type="com.dreamflyer.struts.form.HuntJobForm" />

  </form-beans>

  <global-exceptions />
  <global-forwards />
  <action-mappings >
    <action
      attribute="huntJobForm"
      input="/form/huntJob.jsp"
      name="huntJobForm"
      path="/huntJob"
      scope="request"
      type="com.dreamflyer.struts.action.HuntJobAction" />

  </action-mappings>

  <message-resources parameter="com.dreamflyer.struts.ApplicationResources" />
</struts-config>

